<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension point="org.eclipse.team.core.repository">
	  <repository
    	 class="com.vectrace.MercurialEclipse.team.MercurialTeamProvider"
		 id="com.vectrace.MercurialEclipse.team.MercurialTeamProvider">
 	  </repository>
   </extension>

	<extension
	      point="org.eclipse.team.ui.configurationWizards">
	   <wizard
	        name="MercurialWizard"
	        icon="icons/sample.gif"
	        class="com.vectrace.MercurialEclipse.team.MercurialConfigurationWizard"
	        id="com.vectrace.MercurialEclipse.team.MercurialConfigurationWizard">
	   </wizard>
	</extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Sample Action Set"
            visible="true"
            id="com.vectrace.MercurialEclipse.actionSet">
         <menu
               label="Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;Sample Action"
               icon="icons/sample.gif"
               class="com.vectrace.MercurialEclipse.actions.SampleAction"
               tooltip="Hello, Eclipse world"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="com.vectrace.MercurialEclipse.actions.SampleAction">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            objectClass="org.eclipse.core.resources.IFile"
            name="Sample Page"
            nameFilter="*.*"
            class="com.vectrace.MercurialEclipse.properties.SamplePropertyPage"
            id="com.vectrace.MercurialEclipse.properties.samplePropertyPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Sample XML Editor"
            extensions="xml"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.vectrace.MercurialEclipse.editors.XMLEditor"
            id="com.vectrace.MercurialEclipse.editors.XMLEditor">
      </editor>
      <editor
            name="Sample Multi-page Editor"
            extensions="mpe"
            icon="icons/sample.gif"
            contributorClass="com.vectrace.MercurialEclipse.editors.MultiPageEditorContributor"
            class="com.vectrace.MercurialEclipse.editors.MultiPageEditor"
            id="com.vectrace.MercurialEclipse.editors.MultiPageEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="plugin.xml"
            id="com.vectrace.MercurialEclipse.contribution1">
         <menu
               label="New Submenu"
               path="additions"
               id="com.vectrace.MercurialEclipse.menu1">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="New Action"
               class="com.vectrace.MercurialEclipse.popup.actions.NewAction"
               menubarPath="com.vectrace.MercurialEclipse.menu1/group1"
               enablesFor="1"
               id="com.vectrace.MercurialEclipse.newAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="com.vectrace.MercurialEclipse">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="com.vectrace.MercurialEclipse"
            class="com.vectrace.MercurialEclipse.views.SampleView"
            id="com.vectrace.MercurialEclipse.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.vectrace.MercurialEclipse.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Sample Wizards"
            id="com.vectrace.MercurialEclipse">
      </category>
      <wizard
            name="Multi-page Editor file"
            icon="icons/sample.gif"
            category="com.vectrace.MercurialEclipse"
            class="com.vectrace.MercurialEclipse.wizards.SampleNewWizard"
            id="com.vectrace.MercurialEclipse.wizards.SampleNewWizard">
      </wizard>
   </extension>


   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Sample Preferences"
            class="com.vectrace.MercurialEclipse.preferences.SamplePreferencePage"
            id="com.vectrace.MercurialEclipse.preferences.SamplePreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.vectrace.MercurialEclipse.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="toc.xml">
      </toc>
      <toc
            file="testToc.xml"
            primary="true">
      </toc>
   </extension>

</plugin>
